<div class="container_login">
    <div class="card_login"></div>
    <div class="card_login">
        <h1 class="title_login">@Resources.Resource.menu_login</h1>
        <p align="center" style="color:red;">@Model</p>
        <form action="Login" method="post" id="form-validation">
            @Html.AntiForgeryToken()
            <input type="hidden" value="@url" name="url" />
            <div class="input-container">
                <input name="txtUser" type="tel" id="Username" required="required" class="product_qty valid-number" onkeypress="return numbersonly(this, event)" value="" maxlength="15" pattern="^[0-9]{9,10}$" />
                <label for="Username">@Resources.Resource.login_mobile</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input name="txtPwd" type="tel" id="Password" required="required" class="product_qty valid-number" onkeypress="return numbersonly(this, event)" value="" maxlength="4" pattern="^[0-9]{4}$" />
                <label for="Password">@Resources.Resource.login_year</label>
                <div class="bar_login"></div>
            </div>
            <div class="button-container">
                <button><span>@Resources.Resource.login_go</span></button>
            </div>
            <div class="footer_login"><a href="#">@Resources.Resource.login_forgot</a></div>
        </form>
    </div>
    <div class="card_login alt">
        <div class="toggle_login"></div>
        <h1 class="title_login">
            @Resources.Resource.login_register
            <div class="close_login"></div>
        </h1>
        <form action="Register" method="post" id="form-validation">
            @Html.AntiForgeryToken()
            <div class="input-container">
                <input name="txtName" type="text" id="Name" required="required" class="product_qty" value="" maxlength="50" />
                <label for="Name">@Resources.Resource.login_name</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input name="txtEmail" type="email" id="Email" required="required" class="product_qty" value="" maxlength="50" pattern=@str />
                <label for="Email">@Resources.Resource.login_email</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input name="txtLine" type="text" id="Line" required="required" class="product_qty" value="" maxlength="50" />
                <label for="Line">@Resources.Resource.login_line</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input type="tel" name="txtUserR" id="Username" required="required" class="product_qty valid-number" onkeypress="return numbersonly(this, event)" value="" maxlength="15" pattern="^[0-9]{9,10}$" />
                <label for="Username">@Resources.Resource.login_mobile</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input type="tel" name="txtPwdR" ="Password" required="required" class="product_qty valid-number" onkeypress="return numbersonly(this, event)" value="" maxlength="4" pattern="^[0-9]{4}$" />
                <label for="Password">@Resources.Resource.login_year</label>
                <div class="bar_login"></div>
            </div>
            <div class="input-container">
                <input name="txtRePwdR" type="tel" id="Repeat Password" required="required" class="product_qty valid-number" onkeypress="return numbersonly(this, event)" value="" maxlength="4" pattern="^[0-9]{4}$" />
                <label for="Repeat Password">Repeat @Resources.Resource.login_year</label>
                <div class="bar_login"></div>
            </div>
            <div class="button-container">
                <button><span>@Resources.Resource.login_next</span></button>
            </div>
        </form>
    </div>
</div>
