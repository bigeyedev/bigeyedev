﻿@model string
@{

    Layout = "~/Views/Shared/Front-End_Layout.cshtml";
    string str = @"[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$";
    string url = "";
    if (Request.UrlReferrer != null)
    {
        url = Request.UrlReferrer.ToString();
    }
    Html.RenderPartial("_Culture");
}


