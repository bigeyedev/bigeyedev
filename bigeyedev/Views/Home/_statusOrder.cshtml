@model bigeyedev_order
@if (Model.pay_finish == 1)
{
    if (Model.status == 0 || Model.status == null)
    {
        <span >กำลังดำเนินการจัดหาสินค้าของคุณ</span>
    }
    else if (Model.status == 1)
    {
        <span >กำลังแพ็คสินค้า</span>
    }
    else if (Model.status == 2)
    {
        <span >แพ็คสินค้าเรียบร้อย รอการจัดส่ง</span>
    }
    else if (Model.status == 3)
    {
        <span style="color:#8aad4e;">ส่งสินค้าแล้ว</span>
    }
    else
    {
        <span style="color:red;">ผิดพลาด</span>
    }
}
else
{
    if (Model.pay_amount == null)
    {
        if (Model.order_amount != null)
        {
            <span>รอการชำระเงิน</span>
            <a href="/Home/Payment"><u>แจ้งชำระเงิน</u></a>
        }
        else
        {
            <span>รอการรวมยอด</span>
        }

    }
    else
    {
        <span>[แจ้งชำระเงินแล้ว] รอการตรวจสอบ</span>
    }
}
